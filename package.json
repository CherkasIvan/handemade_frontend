{
    "name": "jv13-craft-front",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "build:prod": "ng build --configuration production",
        "build:dev": "ng build --configuration development",
        "lint": "tslint -p tsconfig.json",
        "precommit": "npm run lint",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "prettier": "npx prettier \"./{css,html,grunt,js,src}/**\" --write --log-level=\"warn\""
    },
    "private": true,
    "dependencies": {
        "@angular-architects/module-federation": "^19.0.3",
        "@angular/animations": "^19.2.5",
        "@angular/cdk": "^19.2.9",
        "@angular/common": "^19.2.0",
        "@angular/compiler": "^19.2.0",
        "@angular/core": "^19.2.0",
        "@angular/forms": "^19.2.0",
        "@angular/platform-browser": "^19.2.0",
        "@angular/platform-browser-dynamic": "^19.2.0",
        "@angular/router": "^19.2.0",
        "@primeng/themes": "^19.0.10",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "angular-cli-ghpages": "^2.0.3",
        "husky": "^9.1.7",
        "postcss": "^8.5.3",
        "prettier": "^3.5.3",
        "prettier-plugin-css-order": "^2.1.2",
        "primeng": "^19.0.10",
        "rxjs": "~7.8.0",
        "tailwindcss": "^4.1.3",
        "tailwindcss-primeui": "^0.6.1",
        "tslib": "^2.3.0",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "zone.js": "~0.15.0"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^19.2.6",
        "@angular/cli": "^19.2.6",
        "@angular/compiler-cli": "^19.2.0",
        "@types/jasmine": "~5.1.0",
        "jasmine-core": "~5.6.0",
        "karma": "~6.4.0",
        "karma-chrome-launcher": "~3.2.0",
        "karma-coverage": "~2.2.0",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.1.0",
        "typescript": "~5.7.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run prettier --staged && ng lint && npm test",
            "pre-push": "ng build --aot true"
        }
    }
}
